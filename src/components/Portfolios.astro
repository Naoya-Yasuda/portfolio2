<script is:inline>
  // Intersection Observer ã§ã‚¹ã‚¯ãƒ­ãƒ¼ãƒ«æ™‚ã«ã‚¢ãƒ‹ãƒ¡ãƒ¼ã‚·ãƒ§ãƒ³ç™ºç«
  const observer = new IntersectionObserver((entries) => {
    entries.forEach(entry => {
      if (entry.isIntersecting) {
        entry.target.classList.add('animate-in');
      }
    });
  }, { threshold: 0.1 });

  document.querySelectorAll('.panel').forEach(panel => {
    observer.observe(panel);
  });

  // ç¨¼åƒçŠ¶æ³ãƒãƒƒãƒ—ã‚¢ãƒƒãƒ—ã®è¡¨ç¤ºåˆ¶å¾¡
  const popup = document.getElementById('availability-popup');
  const portfoliosTitle = document.getElementById('portfolios-title');
  let popupShown = false;

  function showPopup() {
    if (!popupShown && popup) {
      popupShown = true;
      popup.classList.add('show');
      setTimeout(() => {
        popup.classList.remove('show');
      }, 8000);
    }
  }

  // IntersectionObserverã§h2ã‚¿ã‚¤ãƒˆãƒ«ã‚’ç›£è¦–
  if (portfoliosTitle) {
    const popupObserver = new IntersectionObserver((entries) => {
      entries.forEach(entry => {
        if (entry.isIntersecting) {
          showPopup();
        }
      });
    }, { threshold: 0.5 });
    popupObserver.observe(portfoliosTitle);
  }

  // ãƒ•ã‚©ãƒ¼ãƒ«ãƒãƒƒã‚¯: ã‚¹ã‚¯ãƒ­ãƒ¼ãƒ«ã‚¤ãƒ™ãƒ³ãƒˆ
  window.addEventListener('scroll', () => {
    if (portfoliosTitle && !popupShown) {
      const rect = portfoliosTitle.getBoundingClientRect();
      if (rect.top < window.innerHeight && rect.bottom > 0) {
        showPopup();
      }
    }
  });

  // é–‰ã˜ã‚‹ãƒœã‚¿ãƒ³
  const closeBtn = document.querySelector('.availability-close');
  closeBtn?.addEventListener('click', () => {
    popup?.classList.remove('show');
  });
</script>

